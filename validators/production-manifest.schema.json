{
  "$id": "https://example.com/schemas/production-manifest.json",
  "type": "object",
  "required": ["userId","metadata","scenes","assets","audio","visuals","consistency","jobs"],
  "additionalProperties": false,
  "properties": {
    "id": { "type": "string" },
    "createdAt": { "type": "string", "format": "date-time" },
    "userId": { "oneOf": [{ "type": "string" }, { "type": "null" }] },
    "sourceRefs": {
      "type": "object",
      "properties": {
        "analyzerRef": { "type": "string" },
        "refinerRef": { "type": "string" },
        "scriptRef": { "type": "string" }
      },
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "required": ["intent","durationSeconds","aspectRatio","platform","language"],
      "properties": {
        "intent": { "type": "string", "enum": ["video","image","audio"] },
        "durationSeconds": { "type": "number", "minimum": 1 },
        "aspectRatio": { "type": "string" },
        "platform": { "type": "string" },
        "language": { "type": "string" },
        "profile": { "type": "string" },
        "priority": { "type": "string", "enum": ["low","normal","high"] },
        "voiceGender": { "type": "string" },
        "cinematicLevel": { "type": "string", "enum": ["basic","pro"] },
        "note": { "type": "string" }
      },
      "additionalProperties": false
    },
    "scenes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id","startAtSec","durationSeconds","purpose","visuals"],
        "properties": {
          "id": { "type": "string" },
          "startAtSec": { "type": "number", "minimum": 0 },
          "durationSeconds": { "type": "number", "minimum": 0.05 },
          "purpose": { "type": "string" },
          "narration": { "type": "string" },
          "language": { "type": "string" },
          "tts": { "type": ["object","null"] },
          "musicCue": { "type": ["string","null"] },
          "visualAnchor": { "type": "string" },
          "visuals": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["type","assetId"],
              "properties": {
                "type": { "type": "string", "enum": ["user","generated"] },
                "assetId": { "type": "string" },
                "transform": { "type": "object" },
                "shot": { "type": "object" },
                "overlays": { "type": "array" }
              },
              "additionalProperties": true
            }
          }
        },
        "additionalProperties": true
      }
    },
    "assets": {
      "type": "object",
      "minProperties": 0,
      "additionalProperties": {
        "type": "object",
        "required": ["id","source","role","status"],
        "properties": {
          "id": { "type": "string" },
          "source": { "type": "string", "enum": ["user","generated"] },
          "originUrl": { "type": "string" },
          "mimeType": { "type": "string" },
          "role": { "type": "string", "enum": ["primary","reference","background","graphic"] },
          "width": { "type": "number" },
          "height": { "type": "number" },
          "durationSeconds": { "type": "number" },
          "requiredEdits": { "type": "array", "items": { "type": "string" } },
          "status": { "type": "string", "enum": ["pending","processing","ready","failed"] }
        },
        "additionalProperties": true
      }
    },
    "audio": {
      "type": "object",
      "required": ["ttsDefaults","music"],
      "properties": {
        "ttsDefaults": { "type": "object" },
        "narrationMap": { "type": "object" },
        "music": { "type": "object" },
        "sfx": { "type": "array" }
      },
      "additionalProperties": true
    },
    "visuals": { "type": "object" },
    "effects": { "type": "object" },
    "consistency": {
      "type": "object",
      "properties": {
        "character_faces": { "type": "string", "enum": ["locked","vary"] },
        "voice_style": { "type": "string" },
        "tone": { "type": "string" },
        "visual_continuity": { "type": "string", "enum": ["maintain","relaxed"] },
        "enforceTextToImageToVideo": { "type": "boolean" }
      },
      "additionalProperties": true
    },
    "jobs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id","type","payload"],
        "properties": {
          "id": { "type": "string" },
          "type": { "type": "string" },
          "payload": { "type": "object" },
          "dependsOn": { "type": "array" }
        },
        "additionalProperties": true
      }
    },
    "qualityGate": { "type": "object" },
    "warnings": { "type": "array", "items": { "type": "string" } }
  }
}
